<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Class="DuolingoClone.Views.StoriesView">
    
    <ContentPage.Content>
        <CollectionView
            ItemsSource="{Binding Stories}"
            IsGrouped="True">
            <CollectionView.Header>
                <Grid
                    Padding="0,20,0,0"
                    RowSpacing="10"
                    HeightRequest="180">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>
                    <Label
                        Grid.Row="0"
                        Margin="30,0"
                        HorizontalTextAlignment="Center"
                        VerticalTextAlignment="End"
                        Text="Duolingo Histórias"
                        FontSize="30"/>
                    <Label
                        Grid.Row="1"
                        Margin="80,0"
                        HorizontalTextAlignment="Center"
                        VerticalTextAlignment="Start"
                        Text="Melhore sua leitura e escuta com Histórias curtas!"
                        FontSize="Medium"
                        FontFamily="{StaticResource FontRegular}"
                        TextColor="{StaticResource SubTitleColor}"/>
                </Grid>
            </CollectionView.Header>
            <CollectionView.GroupHeaderTemplate>
                <DataTemplate>
                    <Grid
                        Padding="0,0,0,10"
                        ColumnSpacing="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <BoxView 
                            Style="{StaticResource Key=DivisorLine}"
                            VerticalOptions="Center"
                            Grid.Column="0"/>
                        <Label
                            VerticalTextAlignment="Center"
                            HorizontalTextAlignment="Center"
                            Text="{Binding Name}"
                            FontSize="Medium"
                            Grid.Column="1"/>
                        <BoxView 
                            Style="{StaticResource Key=DivisorLine}"
                            VerticalOptions="Center"
                            Grid.Column="2"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.GroupHeaderTemplate>
            <CollectionView.ItemsLayout>
                <GridItemsLayout 
                    Orientation="Vertical"
                    Span="2"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout HeightRequest="200" WidthRequest="200">
                        <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                            <BoxView
                                BackgroundColor="{Binding ShadowBottomColor}"
                                CornerRadius="18"
                                HeightRequest="118"
                                HorizontalOptions="Center"
                                TranslationY="-5"
                                VerticalOptions="End"
                                WidthRequest="118" />

                            <StackLayout
                                    HeightRequest="140"
                                    WidthRequest="140"
                                    HorizontalOptions="Center"
                                    VerticalOptions="End">
                                <ImageButton
                                    Source="{Binding Image}"
                                    BackgroundColor="Transparent"
                                    HeightRequest="140"
                                    HorizontalOptions="Center"
                                    VerticalOptions="End"
                                    WidthRequest="140" />
                            </StackLayout>
                        </Grid>

                        <Label
                            FontSize="24"
                            HorizontalTextAlignment="Center"
                            Text="{Binding Name}" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ContentPage.Content>
</ContentPage>