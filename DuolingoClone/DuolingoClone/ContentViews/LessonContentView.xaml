<?xml version="1.0" encoding="UTF-8"?>
<ContentView 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="clr-namespace:DuolingoClone.Converters"
    xmlns:controls="clr-namespace:DuolingoClone.Controls"
    mc:Ignorable="d"
    x:Class="DuolingoClone.ContentViews.LessonContentView"
    Margin="5,0">
  <ContentView.Content>
      <StackLayout
          Spacing="5">
            <Grid
                WidthRequest="120"
                HeightRequest="120"
                HorizontalOptions="Center"
                VerticalOptions="Center">
                
                <controls:CircularProgressBar
                    WidthRequest="120"
                    HeightRequest="120"
                    TrackColor="#E6E6E6"
                    ProgressColor="#F7CA45"
                    Progress="{Binding Progress}"
                    Rotation="135"/>
                
                <BoxView
                    BackgroundColor="{Binding Color}"
                    CornerRadius="45"
                    WidthRequest="80"
                    HeightRequest="80"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
                <Image
                    HeightRequest="50"
                    WidthRequest="50"
                    HorizontalOptions="Center"
                    Source="{Binding Icon}"/>
                <Grid
                    HorizontalOptions="End"
                    VerticalOptions="End"
                    Margin="0,0,-5,5"
                    HeightRequest="35">
                    <Image
                        Source="{Binding Level, Converter={converters:LevelToImageCrownConverter}}"/>
                    <Label
                        HorizontalTextAlignment="Center"
                        VerticalTextAlignment="Center"
                        Text="{Binding Level}" 
                        TextColor="#CE8830"
                        FontSize="Medium"/>
                </Grid>
            </Grid>
            <Label 
              Text="{Binding Name}" 
              HorizontalTextAlignment="Center"
              FontSize="18"/>
        </StackLayout>
  </ContentView.Content>
</ContentView>